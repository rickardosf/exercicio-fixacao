<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.fiap.segundo.tina.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginTop="@dimen/espaco_top"
        android:layout_marginBottom="@dimen/espaÃ§o_bottom"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/tamanho_numero"
        android:textAlignment="center"
        android:id="@+id/textView" />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_weight="1"
        android:id="@+id/btnDecrementar"
        android:text="@string/decrementar"
        android:textSize="@dimen/fonte_botao"
        android:textColor="@color/texto_botao"
        android:background="@color/colorPrimary"
        android:onClick="decrementar"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_weight="1"
        android:id="@+id/btnIncrementar"
        android:text="@string/incrementar"
        android:textSize="@dimen/fonte_botao"
        android:textColor="@color/texto_botao"
        android:background="@color/colorPrimary"
        android:onClick="incrementar"/>
</LinearLayout>

</LinearLayout>